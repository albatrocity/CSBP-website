ul#schedule-list
  margin: 0
  padding: 0
  list-style: none

.band
  margin-bottom: .2rem
  .name-time
    a.name
      font-family: 'Asap'
      font-weight: normal
      font-size: 1.6rem
      line-height: 2.4rem
      color: color-red
      transition: all 0.4s
      &:hover
        color: color-purple
    .time
      font-family: 'Asap'
      float: right
      font-size: 1.4rem
      padding-top: .5rem
      color: color-purple
      letter-spacing: 0.1rem

@media (max-width: 600px) {
  .band .name-time a.name {
    font-size: 1.5rem
    line-height: 1.8rem
  }
}
